@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center my-4">
    <div class="row my-4 py-4">
        <div class="col-10">
            <div class="form-group">
                <input id="input_loker" type="text" class="form-control" placeholder="Masukkan Nomor Loker"/>
            </div>
        </div>
        <div class="col-2">
            <button class="btn btn-primary" id="cek">Cek Lantai</button>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <small>Loker <span id="loker"></span> Ada di Lantai : </small>
        </div>
        <div class="col-12">
            <h1 id="lantai"></h1>
        </div>
    </div>
</div>

@section Scripts
{
      <script type="text/javascript">
           $('#cek').click(function(){
               $('#loker').html('');
               $('#lantai').html('');
               loker = $('#input_loker').val();
               url = "@Context.Request.Host";
               $.post('https://'+url+'/Home/GetData', {nomor:loker}, function(res){
                   $('#loker').html(loker);
                   $('#lantai').html(res);
               })
           });
      </script>
  
}
